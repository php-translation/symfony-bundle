{
    "name": "php-translation/symfony-bundle",
    "type": "symfony-bundle",
    "description": "",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "symfony/framework-bundle": "^2.7 || ^3.0",
        "symfony/validator": "^2.7 || ^3.0",
        "symfony/translation": "^2.7 || ^3.0",
        "symfony/finder": "^2.7 || ^3.0",

        "php-translation/common": "^0.2.1",
        "php-translation/symfony-storage": "^0.2.1",
        "php-translation/extractor": "^0.1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.5 || ^5.4",
        "php-translation/translator": "^0.1",
        "php-http/curl-client": "^1.0",
        "php-http/message": "^1.0",
        "php-http/message-factory": "^1.0.2",
        "matthiasnoback/symfony-dependency-injection-test": "^1.0",
        "symfony/symfony": "^2.3 || ^3.0",
        "guzzlehttp/psr7": "^1.3",
        "nyholm/nsa": "^1.0"
    },
    "suggest": {
        "php-http/httplug-bundle": "To easier configure your httplug clients."
    },
    "autoload": {
        "psr-4": { "Translation\\Bundle\\": "" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    }
}
