{
    "name": "php-translation/symfony-bundle",
    "type": "symfony-bundle",
    "description": "",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5 || ^7.0",
        "symfony/framework-bundle": "^2.7 || ^3.0",
        "symfony/validator": "^2.7 || ^3.0",
        "symfony/translation": "^2.7 || ^3.0",
        "symfony/finder": "^2.7 || ^3.0",

        "php-translation/common": "^0.2.1",
        "php-translation/symfony-storage": "^0.2.1",
        "php-translation/extractor": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.36 || ^5.5 || ^6.2",
        "php-translation/translator": "^0.1",
        "php-http/curl-client": "^1.7",
        "php-http/message": "^1.6",
        "php-http/message-factory": "^1.0.2",
        "symfony/twig-bundle": "^2.7 || ^3.0",
        "symfony/twig-bridge": "^2.7 || ^3.0",
        "symfony/asset": "^2.7 || ^3.0",
        "symfony/templating": "^2.7 || ^3.0",
        "symfony/dependency-injection": "^2.7 || ^3.0",
        "symfony/web-profiler-bundle": "^2.7 || ^3.0",
        "matthiasnoback/symfony-dependency-injection-test": "^1.0 || ^2.0",
        "guzzlehttp/psr7": "^1.4",
        "nyholm/nsa": "^1.1",
        "nyholm/symfony-bundle-test": "^1.2"
    },
    "suggest": {
        "php-http/httplug-bundle": "To easier configure your httplug clients."
    },
    "autoload": {
        "psr-4": { "Translation\\Bundle\\": "" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "prefer-dist": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.4-dev"
        }
    }
}
